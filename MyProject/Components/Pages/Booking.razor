@page "/Booking"
@using MyProject.Context
@using MyProject.Model
@inject StylistProvider StylistProvider

<div class="container my-5">
    <div class="card p-4">
        <h3 class="mb-4">Choose Your Booking Date, Time, and Stylist</h3>
        <form id="bookingForm">

            <!-- Date Picker -->
            <div class="form-group mb-3">
                <label for="bookingDate">Select a Date:</label>
                <input type="date" id="bookingDate" name="bookingDate" class="form-control" required>
            </div>

            <!-- Time Dropdown -->
            <div class="form-group mb-3">
                <label for="bookingTime">Select a Time:</label>
                <select id="bookingTime" name="bookingTime" class="form-control" required>
                    <option value="" disabled selected>Select a time</option>
                    <option value="09:00">09:00 AM</option>
                    <option value="09:30">09:30 AM</option>
                    <option value="10:00">10:00 AM</option>
                    <option value="10:30">10:30 AM</option>
                    <option value="11:00">11:00 AM</option>
                    <option value="11:30">11:30 AM</option>
                    <option value="12:00">12:00 PM</option>
                    <option value="12:30">12:30 PM</option>
                    <option value="13:00">01:00 PM</option>
                    <option value="13:30">01:30 PM</option>
                    <option value="14:00">02:00 PM</option>
                    <option value="14:30">02:30 PM</option>
                    <option value="15:00">03:00 PM</option>
                    <option value="15:30">03:30 PM</option>
                    <option value="16:00">04:00 PM</option>
                    <option value="16:30">04:30 PM</option>
                    <option value="17:00">05:00 PM</option>
                    <option value="17:30">05:30 PM</option>
                </select>
            </div>

            <!-- Stylist Dropdown -->
            <div class="form-group mb-3">
                <label for="stylist">Select a Stylist:</label>
                <select id="stylist" class="form-control" @bind="selectedStylist" required>
                    <option value="" disabled selected>Select a stylist</option>
                    @foreach (var stylist in stylists)
                    {
                        <option value="@stylist.Id">@stylist.Name</option>
                    }
                </select>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    pay instore
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    pay deposit only
                </label>
            </div>
            <!-- Book Button -->
            <button type="button" onclick="bookService()" class="btn btn-primary mt-3">💖 Book Now</button>

        </form>
    </div>
</div>
<style>
    /* Pink and Pretty Styles */
    body {
        background-color: #ffe6f2;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 500px;
    }

    .card {
        background-color: #fff0f5;
        border: none;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #d63384;
        font-weight: bold;
    }

    label {
        color: #d63384;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #f2a6c7;
    }

        .form-control:focus {
            border-color: #d63384;
            box-shadow: 0 0 5px rgba(214, 51, 132, 0.5);
        }

    .btn-primary {
        background-color: #d63384;
        border-color: #d63384;
        color: #fff;
        border-radius: 8px;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #c52973;
            border-color: #c52973;
        }

    /* Custom pink selection color for options */
    option {
        background-color: #ffe6f2;
        color: #d63384;
    }
    </style>
@code {
    private List <Stylist> stylists;

    protected override async Task OnInitializedAsync()
    {
        stylists = await StylistProvider.GetStylistsAsync();
    }

    private string selectedStylist { get; set; }
}

