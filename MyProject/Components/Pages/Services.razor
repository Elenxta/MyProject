@page "/Services"
@using MyProject.Context
@using MyProject.Model
@using Microsoft.EntityFrameworkCore
@inject ServicesProvider ServicesProvider
@inject NavigationManager NavigationManager 




<h3 class="text-center mb-4" style="color: #d63384; font-weight: bold;">Create a Booking</h3>

<div class="container my-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var service in services)
        {
            <EditForm Model="quantity" OnSubmit="Book">
                <div class="col">
                    <div class="card h-100 background shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <!---->
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="card-title">@service.Name</h5>
                                <h5><span class="badge bg-pink">@service.Price.ToString("C")</span></h5>
                            </div>

                            <!-- Service Description -->
                            <p class="card-text">@service.Description</p>

                            <!-- Book Button -->
                            <div class="mt-auto">
                                <button type="submit" class="btn custom-book-btn w-100" @onclick="GoToBooking">💖 Book Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        }
    </div>
</div>

<style>
    /* Page Styling */
    .text-center {
        font-family: 'Arial', sans-serif;
    }

    .background {
        background-color: #ffe6f0;
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease;
    }


    /* Card Title Styling */
    .card-title {
        color: #d63384;
        font-weight: bold;
    }

    /* Book Button */
    .custom-book-btn {
        background-color: #ff69b4;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 20px;
        padding: 0.75rem;
        transition: background-color 0.3s ease;
    }

    /* Badge Styling for Price */
    .bg-pink {
        background-color: #ff4c61;
    }
</style>

@code {
    [Parameter]
    public Service Service { get; set; }

    private int quantity = 1;
    private IEnumerable<Service> services;

    protected override async Task OnInitializedAsync()
    {
        services = await ServicesProvider.GetAllServicesAsync();
    }

    public async Task Book()
    {

    }

    public void GoToBooking()
    {
        NavigationManager.NavigateTo("/Booking");
    }
}
   

